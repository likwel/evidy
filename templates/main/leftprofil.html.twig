<div class="col-lg-3">
	<div class="card overflow-hidden">
		<div class="couverture-image">
			{% if user.couverture %}
			<img src="/uploads/couverture/{{user.couverture}}" class="img-responsive" alt="" onclick="expandImg(this)">
			{% else %}
			<img src="/images/couverture.jpg" class="img-responsive" alt="">
			{% endif %}
			
		</div>

		<div class="profil-image">
			{% if user.profil %}
			<img src="/uploads/profil/{{user.profil}}" class="img-responsive" alt="" onclick="expandImg(this)">
			{% else %}
			<img src="/images/placeholder.jpg" class="img-responsive" alt="">
			{% endif %}
		</div>

		<div class="profil-label text-center">
			<div class="mb-3">
				<h5><a href="/user/profil/{{user.id}}">{{user.firstname}}</a></h5>
				<h6 class="text-muted"><i>{{user.lastname}}</i></h6>
				<small>@{{user.pseudo}}</small>

			</div>
		</div>

		<div class="profil-button">
			<div
				class="hstack gap-2 gap-xl-3 justify-content-center">
				<!-- User stat item -->
				<div>
					<h6 class="mb-0">{{post_number}}</h6>
					<small>Post</small>
				</div>
				<!-- Divider -->
				<div class="vr"></div>
				<!-- User nandefa demande-->
				<div>
					<h6 class="mb-0">{{follower_number}}</h6>
					<small>Followers</small>
				</div>
				<!-- Divider -->
				<div class="vr"></div>
				<!-- User nandefasana demande -->
				<div>
					<h6 class="mb-0">{{suivi_number}}</h6>
					<small>Suivi(e)s</small>
				</div>
			</div>
		</div>

		<div class="profil-menu">
			<div class="list-group-b" style="">
				<a href="/" class="list-group-item-b menu-active" aria-current="true">
					<i class="bi bi-houses"></i>
					Actualit√©s
				</a>
				<a href="/user/friends" class="list-group-item-b ">
					<i class="bi bi-people"></i>
					Amis <span class="float-end badge text-bg-danger">{% if user_wait != 0 %}{{user_wait}}{% endif %}</span></a>
				<a href="/user/abonnements" class="list-group-item-b ">
					<i class="bi bi-clipboard-plus"></i>
					Abonnements</a>
				<a href="/user/parametres" class="list-group-item-b ">
					<i class="bi bi-gear"></i>
					Paramettres</a>
				<a href="#" class="list-group-item-b ">
					<i class="bi bi-info-square"></i>
					Aides</a>
			</div>

		</div>

	</div>

	<!-- Card News START -->
		<div class="col-sm-6 col-lg-12 mt-3">
			<div
				class="card">
				<!-- Card header START -->
				<div class="card-header pb-0 border-0 bg-white">
					<h5 class="card-title mb-0">#HASTAG</h5>
				</div>
				<!-- Card header END -->
				<!-- Card body START -->
				<div
					class="card-body" id="journal">
					<!-- News item -->
					{% if list_journal %}
						{% for journal in list_journal %}
							<div class="mb-3">
							<h6 class="mb-0">
								<a href="/user/profil/{{journal.user.id}}">{{journal.user.firstname}} {{journal.jour.content}}</a>
							</h6>
							<small class="journal_right" data-journal="{{journal.jour.datetime}}">2hr</small>
						</div>
						{% endfor %}
					{% endif %}
					
					<!-- Load more comments -->
					<a href="/user/journal" role="button" class="btn btn-link btn-link-loader btn-sm text-secondary d-flex align-items-center">
						Voir tous les journaux
					</a>
				</div>
				<!-- Card body END -->
			</div>
		</div>
		<!-- Card News END -->
</div>
